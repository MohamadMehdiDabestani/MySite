@model List<Comments>
@section header {
    <title>نظرات</title>
}
<div class="uk-container ">
    @foreach (var item in Model)
    {
        <div class="uk-margin-medium-top">
            <p>Title :</p>
            @item.CommentTitle
            <p>Text :</p>
            @item.CommentText
            <div>
                <a class="uk-button uk-button-danger" href="/Admin/DeleteComment/@item.CommentId">Delete</a>
                <a class="uk-button uk-button-primary" href="/Admin/OkComment/@item.CommentId">OK</a>
            </div>
        </div>
        <hr class="uk-divider-icon uk-margin-top uk-margin-bottom" />
    }
</div>