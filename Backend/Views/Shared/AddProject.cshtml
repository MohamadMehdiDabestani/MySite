@model AddProject
<div id="add_project_modal" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog">
        <form asp-action="AddOrDeleteProject" method="POST" asp-controller="Admin">
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">اطلاعات را وارد کنید :</h2>
            </div>

            <div class="uk-modal-body">
                <div class="uk-margin">
                    <input type="text" class="uk-input" asp-for="@Model.URL" placeholder="URL" />
                </div>
                <div class="uk-margin">
                    <input type="text" class="uk-input" placeholder="Status" asp-for="@Model.Status" />
                </div>
                <div class="uk-margin">
                    <input type="checkbox" asp-for="@Model.isDelete" id="IsDelete" />
                    <label for="IsDelete">Is Delete ?</label>
                </div>
                <p>Working - Faild - Complete</p>
                <button class="uk-modal-close-default" type="button" uk-close></button>

            </div>
            <div class="uk-modal-footer uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">بستن</button>
                <button class="uk-button uk-button-primary" type="submit">ارسال</button>
            </div>
        </form>
    </div>
</div>