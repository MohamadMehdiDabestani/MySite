@model GetPostViewModel
@section header {
    <title>محمد مهدی - @Model.TitleOfBrowser</title>
    <meta name="Description" content="@Model.Description" />
}
<div class="uk-container container-post">
    <div uk-grid>
        <div class="uk-width-expand">
            <div class="text-post">
                <h1>@Model.Title</h1>
                <img src="/PostImages/@Model.ImageName" alt="@Model.AltImage" />
                <p>
                    @Model.Text
                </p>
            </div>
        </div>
        <div class="uk-width-1-3@m">
            <aside>
                <div class="info-post" uk-sticky="offset: 10;animation: uk-animation-fade">
                    <p>اطلاعات پست</p>
                    <div class="create-date">
                        <img src="/images/booking.svg" alt="" />
                        <p>تاریخ ثبت : @Model.CreateDate</p>
                    </div>
                    <div class="category">
                        <img src="/images/category.svg" alt="" />
                        <p>دسته بندی : @Model.Category</p>
                    </div>
                    
                    <div class="tags">
                        <img src="/images/tags.svg" alt="" />
                        <p>کلمات کلیدی :</p>
                        <ul>
                            @foreach (var item in Model.Tags)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                    <p>
                        <a href="/admin/editepost/@Model.id" class="uk-button uk-button-primary uk-button-small">Edite</a>
                    </p>
                    <p>
                        <a href="/admin/deletepost/@Model.id" class="uk-button uk-button-danger uk-button-small">Delete</a>
                    </p>
                </div>
            </aside>
        </div>
    </div>
</div>